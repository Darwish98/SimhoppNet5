                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Club</th>
                            <th>Total Score</th>
                        </tr>
                    </thead>
                </table>
            </div>
            <div class="tbl-content">
                <table cellpadding="0" cellspacing="0" border="0">
                    <tbody>
                        @foreach (var participant in participants32)
                        {
                            <tr>
                                <td>@participant.FirstName</td>
